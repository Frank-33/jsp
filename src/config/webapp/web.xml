<?xml version='1.0' encoding='UTF-8'?>

<!DOCTYPE web-app
	PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
	"http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
	<display-name>Mark Logic JSP Taglib Test Webapp</display-name>
	<description>Test Web Application for the Mark Logic JSP Tag Library</description>

	<taglib>
		<taglib-uri>http://marklogic.com/jsp/taglib</taglib-uri>
		<taglib-location>/WEB-INF/taglib/marklogicxquery.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>http://marklogic.com/jsp/taglib-rt</taglib-uri>
		<taglib-location>/WEB-INF/taglib/marklogicxquery-rt.tld</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>http://sun.com/jstl/c</taglib-uri>
		<taglib-location>/WEB-INF/taglib/c.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>http://sun.com/jstl/c-rt</taglib-uri>
		<taglib-location>/WEB-INF/taglib/c-rt.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>http://sun.com/jstl/x</taglib-uri>
		<taglib-location>/WEB-INF/taglib/x.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>http://sun.com/jstl/x-rt</taglib-uri>
		<taglib-location>/WEB-INF/taglib/x-rt.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>http://sun.com/jstl/fmt</taglib-uri>
		<taglib-location>/WEB-INF/taglib/fmt.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>http://sun.com/jstl/fmt-rt</taglib-uri>
		<taglib-location>/WEB-INF/taglib/fmt-rt.tld</taglib-location>
	</taglib>

	<resource-ref>
		<res-ref-name>xdbc/default</res-ref-name>
		<res-type>com.marklogic.xdmp.XDMPDataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>